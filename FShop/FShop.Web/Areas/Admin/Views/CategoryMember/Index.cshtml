@model List<FShop.Web.Models.CategoryMemberViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var i = 1;
}

@section css{
    <link href="~/Assets/Admin/css/MyCss/CategoryMemberStyle.css" rel="stylesheet" />
}

@section header{
    Quản lý Category Member
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Mô tả</th>
            <th>Modify</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="hidden">
                <td>@i</td>
                <td><input class="form-control txt-name" /></td>
                <td><input class="form-control txt-description" /></td> 
                <td>
                    <span class="btn btn-primary btn-update" data-id="@item.ID">Cập nhật</span>
                    <span class="btn btn-warning btn-close-update">Hủy</span>
                </td>
            </tr>
            <tr>
                <td>@(i++)</td>
                <td class="lbl-name">@item.Name</td>
                <td class="lbl-description">@item.Description</td>
                <td>
                    <span class="btn btn-primary btn-edit" data-id="@item.ID">Cập nhật</span>
                    <span class="btn btn-danger btn-delete" data-id="@item.ID">Xóa</span>
                </td>
            </tr>
        }
        <tr class="hidden" id="new-row">
            <td></td>
            <td>
                <input type="text" class="form-control" placeholder="Tên loại thành viên..." id="txt-name" />
            </td>
            <td>
                <input type="text" class="form-control" placeholder="Mô tả..." id="txt-description" />
            </td>
            <td>
                <button class="btn btn-success btn-add-category-member">Thêm</button>
                <button class="btn btn-danger btn-delete-new-row ml-3"><i class="fa fa-minus"></i></button>
            </td>
        </tr>
    </tbody>
</table>

<span class="btn btn-primary btn-add-row"><i class="fa fa-plus"></i></span>

@section script{
    <script src="~/Assets/Admin/js/MyScript/CategoryMemberScript.js"></script>
}