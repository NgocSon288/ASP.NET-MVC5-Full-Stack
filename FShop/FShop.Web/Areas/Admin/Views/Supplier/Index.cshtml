@model List<FShop.Web.Models.SupplierViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section css{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}

@section header{
    Quản lý nhà cung cấp
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td>
                <a class="btn btn-success btn-plus" href="@Url.Action("Add", "Supplier")">
                    <i class="fa fa-plus"></i>
                    Thêm nhà cung cập
                </a>
            </td>
        </tr>
        <tr>
            <th>Tên thể hiện</th>
            <th>Địa chỉ</th>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Fax</th>
            <th>Modify</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Fax</td>
                <td>
                    <a class="btn btn-primary btn-update" href="@Url.Action("Update", "Supplier", new { @id = item.ID})">Cập nhật</a>
                    <button class="btn btn-danger btn-delete" data-id="@item.ID">Xóa</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section script{
    <script src="~/Assets/Admin/js/MyScript/SupplierScript.js"></script>
}