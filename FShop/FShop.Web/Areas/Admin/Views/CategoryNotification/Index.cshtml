@model List<FShop.Web.Models.CategoryNotificationViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var i = 1;
}

@section css{
    <link href="~/Assets/Admin/css/MyCss/CategoryNotificationStyle.css" rel="stylesheet" />
}

@section header{
    Quản lý Category Notification
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Mô tả</th>
            <th>Màu sắc</th>
            <th>Icon</th>
            <th>Modify</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="hidden">
                <td>@i</td>
                <td><input class="form-control txt-description" /></td>
                <td><input class="form-control txt-color" /></td>
                <td><input class="form-control txt-icon" /></td>
                <td>
                    <span class="btn btn-primary btn-update" data-id="@item.ID">Cập nhật</span>
                    <span class="btn btn-warning btn-close-update">Hủy</span>
                </td>
            </tr>
            <tr>
                <td>@(i++)</td>
                <td class="lbl-description">@item.Description</td>
                <td class="@item.Color lbl-color">@item.Color</td>
                <td><i class="@item.Icon lbl-icon" data-icon="@item.Icon"></i></td>
                <td>
                    <span class="btn btn-primary btn-edit" data-id="@item.ID">Cập nhật</span>
                    <span class="btn btn-danger btn-delete" data-id="@item.ID">Xóa</span>
                </td>
            </tr>
        }
        <tr class="hidden" id="new-row">
            <td></td>
            <td>
                <input type="text" class="form-control" placeholder="Mô tả ngắn gọn..." id="txt-description" />
            </td>
            <td>
                <input type="text" class="form-control" placeholder="Màu sắc..." id="txt-color" />
            </td>
            <td>
                <input type="text" class="form-control" placeholder="Icon..." id="txt-icon" />
            </td>
            <td>
                <button class="btn btn-success btn-add-category-notification">Thêm</button>
                <button class="btn btn-danger btn-delete-new-row ml-3"><i class="fa fa-minus"></i></button>
            </td>
        </tr>
    </tbody>
</table>

<span class="btn btn-primary btn-add-row"><i class="fa fa-plus"></i></span>

@section script{
    <script src="~/Assets/Admin/js/MyScript/CategoryNotificationScript1.js"></script>
}