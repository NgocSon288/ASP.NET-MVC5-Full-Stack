@model List<FShop.Web.Models.AdvertisementViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section css{
    <link href="~/Assets/Admin/css/MyCss/AdvertisementStyle.css" rel="stylesheet" />
}

@section header{
    Show slide
}

<div class="container-fluid">
    <div class="w-50 mx-auto">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators"> 
                @foreach (var item in Model)
                {
                    if (item.DisplayOrder == 1)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@(item.DisplayOrder - 1)" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@(item.DisplayOrder - 1)"></li>
                    }
                }
            </ol>
            <div class="carousel-inner"> 

                @foreach (var item in Model)
                {
                    if (item.DisplayOrder == 1)
                    {
                        <div class="carousel-item active">
                            <img class="d-block w-100 img-sl" src="~/Assets/Admin/images/MyImages/Advertisement/@item.Image" alt="Third slide">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="d-block w-100 img-sl" src="~/Assets/Admin/images/MyImages/Advertisement/@item.Image" alt="Third slide">
                        </div>
                    }
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <h3></h3>
</div>

@section script{
    <script src="~/Assets/Admin/js/MyScript/AdvertisementScript1.js"></script>
}