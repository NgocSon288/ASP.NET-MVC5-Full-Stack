@model List<FShop.Web.Models.MemberViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var count = Model.Count();
    var pageSize = 3;
    var i = 1;
}

@section css{
    <link href="~/Assets/Admin/css/MyCss/MemberStyle.css" rel="stylesheet" />
}

@section header{
    Trang quản lý thành viên
}

<div class="row">
    <div class="col-lg-6">
        @Html.ActionLink("Thêm", "AddMember", "Member", new { @class = "btn btn-success" })
    </div>
    <div class="col-lg-6">
        <input placeholder="Search..." id="member-search" style="min-width: 300px;"/>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tài khoản</th>
            <th>Họ Tên</th>
            <th>Email</th>
            <th>Địa chỉ</th>
            <th>Trạng thái</th>
            <th>Modify</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var status = item.MemberStatus.Status;
            var color = "";
            switch (status)
            {
                case 1:
                    color = "text-success";
                    break;

                case 2:
                    color = "text-danger";
                    break;
            }

            <tr class="@Url.Content("hidden-row member-page member-page")@((i + 2) / pageSize )" data-test="a">
                <td>@(i++)</td>
                <td>@item.UserName</td>
                <td>@item.DisplayName</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>
                    <a class="status-btn @color" data-id="@item.ID" data-status="@item.MemberStatus.Status">@item.MemberStatus.Description</a>
                </td>
                <td data-id="@item.ID">
                    <button class="btn btn-danger member-delete">Xóa</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation example">
    <ul class="pagination">
        @for (i = 1; i <= (count + 1) / pageSize; i++)
        {
            if (i == 1)
            {
                <li class="page-item active"><a class="page-link" href="#">@i</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" href="#">@i</a></li>
            }
        }
    </ul>
</nav>


@section script{
    <script src="~/Assets/Admin/js/MyScript/MemberScript.js"></script>
}